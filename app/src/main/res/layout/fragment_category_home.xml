<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabCategoryHome"
        app:tabGravity="fill"
        app:tabMaxWidth="@dimen/TabLayoutMaxWidth"
        app:tabSelectedTextColor="@color/titleTextColor"
        app:tabTextColor="@color/tabUnselectedTextColor"
        app:tabTextAppearance="@style/categoryTabTextStyle"
        app:tabIndicatorColor="@color/indicatorColor"
        app:tabIndicatorHeight="@dimen/categoryIndicatorHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginStart="@dimen/categoryHomeTablayoutMarginStartÄ‘"
        android:layout_marginEnd="@dimen/categoryHomeTablayoutMarginEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpCategoryHome"
        app:layout_constraintTop_toBottomOf="@id/tabCategoryHome"
        android:layout_marginTop="@dimen/categoryHomeViewPagerMarginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>