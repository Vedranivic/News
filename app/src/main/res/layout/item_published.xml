<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/uppertitleMarginTop"
    android:layout_marginStart="@dimen/textMarginStart"
    android:layout_marginEnd="@dimen/textMarginEnd">

    <ImageView
        android:id="@+id/ivLineTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF1F2F3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvPublished"
        android:textSize="12sp"
        android:textColor="#99000000"
        android:layout_marginTop="@dimen/publishedMarginTop"
        android:layout_marginStart="@dimen/publishedMarginStart"
        android:layout_marginBottom="@dimen/publishedMarginBottom"
        app:layout_constraintTop_toBottomOf="@id/ivLineTop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvAuthor"
        android:textSize="12sp"
        android:textColor="#99000000"
        android:layout_marginStart="@dimen/publishedMarginStart"
        android:layout_marginBottom="@dimen/publishedMarginTop"
        app:layout_constraintTop_toBottomOf="@id/tvPublished"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvShares"
        android:textSize="12sp"
        android:textColor="#99000000"
        android:layout_marginEnd="@dimen/sharesMarginEnd"
        android:layout_marginBottom="@dimen/publishedMarginTop"
        app:layout_constraintTop_toBottomOf="@id/tvPublished"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivLineBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF1F2F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</android.support.constraint.ConstraintLayout>