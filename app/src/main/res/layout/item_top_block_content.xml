<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topBlockArticle"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTopBlockFeature"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="360dp" />

    <TextView
        android:id="@+id/tvTobBlockCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivTopBlockFeature"
        android:layout_marginStart="@dimen/pageIndicatorMarginStart"
        android:layout_marginBottom="@dimen/categoryTopBlockMarginBottom"
        android:textSize="@dimen/defaultTextSize"
        android:background="@drawable/category_shape"
        />

    <TextView
        android:id="@+id/tvTopBlockTitle"
        app:layout_constraintTop_toBottomOf="@id/ivTopBlockFeature"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/pageIndicatorMarginStart"
        android:layout_marginEnd="@dimen/pageIndicatorMarginStart"
        android:layout_marginBottom="@dimen/pageIndicatorMarginStart"
        android:layout_marginTop="@dimen/titleTopBlockMarginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/topBlockTitleTextSize"
        android:textColor="@color/titleTextColor"
        android:fontFamily="@font/robot_slab"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="3"
        />

</android.support.constraint.ConstraintLayout>