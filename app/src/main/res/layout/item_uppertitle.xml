<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/uppertitleMarginTop"
    android:layout_marginStart="@dimen/textMarginStart"
    android:layout_marginEnd="@dimen/textMarginEnd">

    <TextView
        android:id="@+id/tvUpperTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/upperTitleTextSize"
        android:textStyle="bold"
        android:textColor="@color/upperTitleTextColor"
        />

</android.support.constraint.ConstraintLayout>