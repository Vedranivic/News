<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="categoryTabTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/robot_slab</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homeTabStyle">
        <item name="android:textAppearance">@style/homeTabTextStyle</item>
    </style>

    <style name="homeTabStyle.Selected" parent="homeTabStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="homeTabStyle.Unselected" parent="homeTabStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/unselectedTextTransparent</item>
    </style>

    <style name="homeTabTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/robot_slab</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/unselectedTextTransparent</item>
    </style>

    <style name="Theme.NoActionBar.NoTitle.TransparentStatusBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>





</resources>
